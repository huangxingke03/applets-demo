/* pages/editPatientFile/editPatientFile.wxss */

page {
     height: 100%;
     width: 100%;
}

.window_view {
     display: flex;
     background-color: #f8f8f8;
}

.line {
     background-color: #f0f2f5;
     height: 40rpx;
     width: 100%;
}


.create_bt_view {
     display: flex;
     justify-content: center;
     width: 100%;
     margin-top: 30rpx;
     margin-bottom: 30rpx;
}

.create_file_bt {
     width: 80%;
     text-align: center;
     line-height: 100rpx;
     font-size: 44rpx;
     color: white;
     display: inline-block;
     background: linear-gradient(to right, #f8c370, #f09923);
}

.base_view {
     display: flex;
     flex-direction: column;
     height: 100%;
     width: 100%;
}

.edit_title_view {
     display: flex;
     flex-direction: row;
     align-items: center;
     padding-left: 20rpx;
     margin-top: 30rpx;
     width: 100%;
}

.thin_line {
     background-color: #d2d2d2;
     height: 3rpx;
     width: 100%;
}

.shadow_view_line {
     width: 100%;
     background: #e0e0e0;
     height: 3rpx;
}

