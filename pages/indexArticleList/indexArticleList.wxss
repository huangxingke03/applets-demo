/* miniprogram/pages/indexArticleList/indexArticleList.wxss */

.news {
  padding: 0 10px;
  box-sizing: border-box;
  position: relative;
}

.news .image {
  width: 113px;
  height: 77px;
  position: absolute;
}

.news image {
  width: 100%;
  height: 80%;
  display: inline-block;
}

.news .text-content {
  padding-left: 125px;
  height: 72px;
}

.news .text1 {
  font-size: 16px;
  line-height: 1.3;
  margin-bottom: 15px;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.news .text2 {
  font-size: 11px;
  color: rgba(0, 0, 0, 0.5);
  position: absolute;
  bottom: 11px;
  left: 136px;
  width: 467rpx;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.loadingView {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;
  height: calc(100vw/100*15);
  width: 100%;
}

.loadingTitle {
  text-align: center;
  margin-top: 10rpx;
}

.loadingIconView {
  display: flex;
  justify-content: center;
  align-content: center;
}

.loadingIcon {
  width: 40rpx;
  height: 40rpx;
  animation: rotate 2s linear infinite;
}

.loadingComplete {
  text-align: center;
  margin-top: 10rpx;
}

.noDataImg {
  width: 450rpx;
  height: 270rpx;
}

.text-size-36 {
  font-size: 36rpx;
  display: flex;
}

.margin-top-4 {
  margin-top: 4%;
}

.flex_card {
  padding: 10px 0px;
  display: flex;
  border-bottom: 1px solid gainsboro;
}

.noDataView {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 9%;
}
.scrollView {
  padding-bottom: 50rpx;
}