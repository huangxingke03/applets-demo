/* miniprogram/pages/addGiftPackage/addGiftPackage.wxss */

page {
  height: 100%;
  width: 100%;
  background-color: #f0f2f5;
}

.window_view {
  height: 100%;
  width: 100%;
}

.loading {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.loading_icon_view {
  background: #535354;
  border-radius: 10rpx;
  width: 250rpx;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading_icon {
  width: 40rpx;
  height: 40rpx;
  animation: rotate 2s linear infinite;
}

.loading_title {
  margin-top: 25rpx;
}

.success {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.success_icon {
  width: 250rpx;
  height: 250rpx;
  margin-top: 100rpx;
}

.success_title {
  margin-top: 46rpx;
  font-size: 36rpx;
}

.failure {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.failure_icon {
  width: 250rpx;
  height: 250rpx;
  margin-top: 100rpx;
}

.failure_title {
  margin-top: 46rpx;
  font-size: 36rpx;
}

.retryGetBtn {
  display: block;
  height: 80rpx;
  width: 60%;
  border-radius: 10rpx;
  text-align: center;
  color: white;
  line-height: 80rpx;
  font-size: 30rpx;
  background: linear-gradient(to right, #f7c674, #f7c674);
}

.backIndexBtn {
  display: block;
  height: 80rpx;
  width: 60%;
  border-radius: 10rpx;
  text-align: center;
  color: #f7c674;
  line-height: 80rpx;
  font-size: 30rpx;
  border: 1rpx solid#f7c674;
  background-color: #f0f2f5;
}

.unknown_internet_error_view {
  margin-top: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.retryGetOtherBtn {
  display: block;
  height: 80rpx;
  width: 60%;
  border-radius: 10rpx;
  text-align: center;
  color: white;
  line-height: 80rpx;
  font-size: 30rpx;
  background: linear-gradient(to right, #f7c674, #f7c674);
}

.backIndexOtherBtn {
  margin-top: 36rpx;
  display: block;
  height: 80rpx;
  width: 60%;
  border-radius: 10rpx;
  text-align: center;
  color: #f7c674;
  line-height: 80rpx;
  font-size: 30rpx;
  border: 1rpx solid#f7c674;
  background-color: #f0f2f5;
}

.unknown_internet_error {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
}

.show_package {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.package_name {
  margin-top: 180rpx;
}

.package_details {
  margin-top: 30rpx;
}

.setContainer {
  border-radius: 8px;
  background: white;
  font-size: 17px;
  margin: 20px auto;
  width: calc(100% - 40px);
  box-shadow: 6px 6px 14px rgba(195, 190, 186, 1.000);
}

.heightLimit {
  overflow: hidden;
  transition: max-height 0.5s linear;
}

.setTitle {
  border-radius: 8px 8px 0 0;
  color: white;
  background-color: #f8c574;
  height: 40px;
  line-height: 40px;
  text-align: center;
}

.endDate {
  height: 20px;
  line-height: 20px;
  color: white;
  font-size: 11.3px;
  background: #e59e49;
  text-align: center;
}

.productContainer {
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.productTitle {
  padding: 0 1em 0 80px;
  position: relative;
}

.productTitle>.container {
  height: 67.33px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.font-bold {
  font-weight: bold;
}

.tokken {
  position: absolute;
  color: white;
  top: -2px;
  left: 15px;
}

.tokken image {
  width: 45px;
  /* height: 60.6666px; */
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.tokken view {
  position: relative;
  z-index: 2;
  width: 45px;
  height: 60.6666px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 15px;
  font-weight: bold;
}

.tokken-btn {
  height: 48px;
  line-height: 48px;
  color: #ff8d08;
  text-align: center;
}

.infoContainer {
  background-color: #e9e9e9;
  padding: 0 1em;
}

.infoContainer>.container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 63.33px;
}

.hr_scale-half {
  height: 1px;
  background: #bebebe;
  transform: scaleY(0.5);
  transform-origin: 50% 100%;
  margin-right: -1em;
}

.orange {
  color: #f15b19;
}

.Big {
  font-size: 25px;
  /* font-weight:200; */
  display: inline-block;
  padding: 0 0.1em;
  font-family: inherit;
  font-stretch: ultra-condensed;
}

.failure button {
  margin-top: 100rpx;
}

.success button {
  margin-top: 100rpx;
}

.show_package button {
  margin-top: 44rpx;
  margin-bottom: 44rpx;
}
