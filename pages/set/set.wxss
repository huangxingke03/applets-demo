/* pages/set/set.wxss */
.setContainer{
  border-radius:8px;
  background: white;
  font-size:17px;
  margin:20px auto ;
  width:calc( 100% - 40px );
  box-shadow: 6px 6px 14px rgba(195, 190, 186, 1.000);

}
.heightLimit{
  overflow: hidden;
   transition: max-height .5s linear
}
.setTitle{
  border-radius:8px 8px 0 0;
  color:white;
  background-color: #F8C574;
 height: 40px;
 line-height: 40px;
 text-align: center;
}
.endDate{
  height: 20px;
  line-height: 20px;
  color: white;
  font-size: 11.3px;
  background: #e59e49;
   text-align: center;
}
.productContainer{
     overflow: hidden;
    transition: max-height .3s ease
}
.productTitle{
  
  padding:0 1em 0 80px;
  position:relative;

}
.productTitle>.container{
  height:67.33px;
   display: flex;
  justify-content:space-between;
  align-items: center;


}
.font-bold{
   font-weight: bold;
}
.tokken{
  position:absolute;
  color:white;
  top:-2px;
  left:15px;
}
.tokken image{
  width: 45px;
  /* height: 60.6666px; */
  position: absolute;
  top:0;
  left:0;
  z-index: 1;
}
.tokken view{
  position:relative;
  z-index: 2;
   width: 45px;
  height: 60.6666px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size:15px;
  font-weight: bold;
}
.tokken-btn{
  height:48px;
  line-height: 48px;
  color:#ff8d08;
  text-align: center;
}
.infoContainer{
  background-color: #e9e9e9;
  padding:0 1em;
}
.infoContainer>.container{
  display: flex;
  justify-content:space-between;
  align-items: center;
      height:63.33px;
      

}

.hr_scale-half {
    height: 1px;
      background:#BEBEBE;
    transform: scaleY(0.5);
    transform-origin: 50% 100%;
    margin-right:-1em;
}
.orange{
  color:#f15b19;
}
.Big{
  font-size: 25px;
/* font-weight:200; */
display: inline-block;
padding:0 0.1em;
font-family:inherit;
font-stretch:ultra-condensed;
}

